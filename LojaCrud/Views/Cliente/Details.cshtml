@model LojaCrud.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1>Detalhes do Cliente</h1>
<h5>Informações detalhadas do cliente.</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4>Informações do Cliente</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
        </dl>
    </div>
</div>
<hr />
<div class="text-center">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdCliente">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar ao início</a>
</div>
