@model LojaCrud.Models.Cliente

@{
    ViewData["Title"] = "Adicionar Cliente";
}

<h1>Adicionar Cliente</h1>
<h5>Preencha os campos abaixo para adicionar um novo cliente.</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do cliente" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" placeholder="Telefone do cliente" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Adicionar" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
<hr />
<div class="text-center">
    <a class="btn btn-secondary" asp-action="Index">Voltar ao início</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
