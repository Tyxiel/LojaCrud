@model LojaCrud.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>
<h5>Tem certeza que deseja excluir este produto?</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4>Detalhes do Produto</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CriadoEm)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CriadoEm)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdProduto" />
            <input type="submit" value="Excluir" class="btn btn-danger btn-block" />
        </form>
        <hr />
        <div class="text-center mt-2">
            <a class="btn btn-secondary" asp-action="Index">Voltar ao início</a>
        </div>
    </div>
</div>
