@model LojaCrud.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes do Produto</h1>
<h5>Informações detalhadas do produto.</h5>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4>Informações do Produto</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CriadoEm)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CriadoEm)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
            </dd>
        </dl>
    </div>
</div>
<hr />
<div class="text-center">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdProduto">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar ao início</a>
</div>
